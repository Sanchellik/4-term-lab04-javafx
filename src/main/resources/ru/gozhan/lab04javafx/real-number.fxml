<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ru.gozhan.lab04javafx.controller.RealNumberController"
            prefHeight="400.0" prefWidth="600.0">

    <GridPane hgap="10" vgap="10">
        <TextField fx:id="display" editable="false" GridPane.columnSpan="4"/>

        <Button fx:id="button1" text="1" onAction="#processNumpad" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Button fx:id="button2" text="2" onAction="#processNumpad" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Button fx:id="button3" text="3" onAction="#processNumpad" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <Button fx:id="buttonPlus" text="+" onAction="#processOperator" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

        <Button fx:id="button4" text="4" onAction="#processNumpad" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Button fx:id="button5" text="5" onAction="#processNumpad" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Button fx:id="button6" text="6" onAction="#processNumpad" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
        <Button fx:id="buttonMinus" text="-" onAction="#processOperator" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

        <Button fx:id="button7" text="7" onAction="#processNumpad" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <Button fx:id="button8" text="8" onAction="#processNumpad" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Button fx:id="button9" text="9" onAction="#processNumpad" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
        <Button fx:id="buttonMultiply" text="*" onAction="#processOperator" GridPane.columnIndex="3" GridPane.rowIndex="3"/>

        <Button fx:id="button0" text="0" onAction="#processNumpad" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <Button fx:id="buttonDot" text="." onAction="#processNumpad" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <Button fx:id="buttonEquals" text="=" onAction="#processEquals" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
        <Button fx:id="buttonDivide" text="/" onAction="#processOperator" GridPane.columnIndex="3" GridPane.rowIndex="4"/>

        <Button fx:id="buttonClear" text="C" onAction="#processClear" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <Button fx:id="buttonSignChange" text="+/-" onAction="#processSignChange" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        <Button fx:id="buttonPercentage" text="\%" onAction="#processOperator" GridPane.columnIndex="2" GridPane.rowIndex="5"/>
        <Button fx:id="buttonMod" text="mod" onAction="#processOperator" GridPane.columnIndex="3" GridPane.rowIndex="5"/>

        <Button fx:id="buttonSqrt" text="sqrt" onAction="#processOperator" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <Button fx:id="buttonPower" text="^" onAction="#processOperator" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
    </GridPane>

</AnchorPane>
